//b505831x0.dev

ruleset CatchLocatino {
	meta {
		name "Location Data"
		description <<
			Hello world
			>>
		author "Jared Yarn"
		logging on
		use module a169x701 alias CloudRain
		use module a41x196 alias SquareTag
	}

	rule showLocation is active {
		select when web cloudAppSelected
		pre {
			dataString = ent:location.encode();
			mainHTML = <<
				<div id="main">Location Recieved: #{dataString}}</div>
			>>;
		}
		{
			SquareTag:inject_styling();
			CloudRain:createLoadPanel("Location recieved", {}, mainHTML);
			replace_html('#main', mainHTML);
		}
	}

	rule nearby is active {
		select when location notification
		pre {
			locIN = event:attr("location").decode();
		}

		{
			send_directive("Pico received data") with location = locIn;
		}
		fired {
			set ent:location locIn;
		}
	}
}
